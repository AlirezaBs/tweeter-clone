{
  "kind": "collectionType",
  "collectionName": "tweets",
  "info": {
    "singularName": "tweet",
    "pluralName": "tweets",
    "displayName": "tweet",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "text": {
      "type": "text",
      "required": true
    },
    "blockTweet": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "likes": {
      "type": "integer",
      "default": 0
    },
    "username": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "tweet"
    }
  }
}
